  Interfaces;

type
  TPessoa = class(TInterfacedObject, iPessoa)
    private
    public
      function mostraNome(Nome : String);

      constructor Create;
      destructor Destroy; override;
      class function New : iPessoa;
  end;

implementation

{ TPessoa }

constructor TPessoa.Create;
begin

end;

destructor TPessoa.Destroy;
begin

  inherited;
end;

function TPessoa.mostraNome(Nome: String);
begin

end;

class function TPessoa.New: iPessoa;
begin
  Result:= Self.Create;
end;

end.
